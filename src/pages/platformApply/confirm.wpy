        <div class="cell">
          <div class="label">工作内容</div>
          <div>{{ detailApplyDo.jobContent || '' }}</div>
        </div>
        <div class="cell">
          <div class="label">重要程度</div>
          <div style="color: #bea365">{{ detailApplyDo.important || '' }}</div>
