<script>
  import {
    BaseDataKey
  } from '@/constant';
  import wepy from '@wepy/core';
  import store from '@/store';
  import formatTimeTwo from '@/utils/moment.js';
  import {
    mapState
  } from '@wepy/x';
  import CommonMixin from '@/mixins/commonMixin.js';
  wepy.page({
    store,
    mixins: [CommonMixin],
    data: {
      isDisabled: false
    },
    computed: mapState(['detailApplyDo']),
    methods: {
      submitDrafts() {
        if (this.isDisabled) return;
        this.isDisabled = true;
        wepy.$loading();
        this.detailApplyDo.saveOrSubmit = 0;
        wepy.$api('app/craneApply/saveOrSubmitCraneApply', this.detailApplyDo)
          .then((res) => {
            wx.hideToast();
            wx.navigateBack({
              delta: 2
            });
          })
          .finally(() => (this.isDisabled = false));
      },
      makePhoneCall(phone) {
        phone &&
          wx.makePhoneCall({
            phoneNumber: phone
          });
      },
      submit() {
        if (this.isDisabled) return;
        wepy.$loading();
        this.isDisabled = true;
        this.sendForkerLeft();
      },
      sendForkerLeft() {
        this.detailApplyDo.saveOrSubmit = 1;
        wepy.$api('app/craneApply/saveOrSubmitCraneApply', this.detailApplyDo).then((res) => {
          this.onSuccess(res);
        });
      },
      onSuccess(res) {
        wx.hideToast();
        wx.redirectTo({
          url: `/pages/craneApply/taskSuccess?jobNum=${res.requestOddNumber}`
        });
      }
    }
  });
</script>

