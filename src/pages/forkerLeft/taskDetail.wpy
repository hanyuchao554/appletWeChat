      // showForkliftTaskDataDrop: false,
      // 审批信息
      showApprovalList: false,
      // showApprovalListDrop: false
    },
    onLoad({
      applyState
    }) {
      this.init(applyState);
    },
    computed: mapState(['detailApplyDo']),
    methods: {
      init(applyState) {
        let _applyState = Number(applyState);
        if (_applyState === 0) {
          this.showApplicationBtn = true;
        }
      },
      makePhoneCall(phone) {
        phone &&
          wx.makePhoneCall({
            phoneNumber: phone
          });
      },
      triggerDrop(key) {
        this[key] = !this[key];
      },
      triggerDropListItem(tagList, index) {
        let data = this.detailApplyDo[tagList][index].showDrop;
        this.detailApplyDo[tagList][index].showDrop = !data;
        console.log(tagList,index)
        console.log(data)
      },
      open(type){
        if(type == 1){
          if(this.showApprovalList){
            this.showApprovalList = false
          }else{
            this.showApprovalList = true
          }
        }
        if(type == 2){
          if(this.editUpDateVoList){
            this.editUpDateVoList = false
          }else{
            this.editUpDateVoList = true
          }
        }
        console.log(type)
      },
      getTime(time, hasYear) {
        let str = hasYear ? 'Y-M-D h:m' : 'M-D h:m';
        return time ? formatTimeTwo(time * 1000, str) : '';
      },
      goToPage() {
        wx.redirectTo({
          url: '/pages/forkerLeft/addTask'
        });
      }
    }
  });
</script>

