    mapState
  } from '@wepy/x';
  import CommonMixin from '@/mixins/commonMixin.js';
  wepy.page({
    store,
    mixins: [CommonMixin],
    data: {
      // 申请信息
      showAppalyDetailDrop: false,
      // approvalList: [],
      // 继续申请
