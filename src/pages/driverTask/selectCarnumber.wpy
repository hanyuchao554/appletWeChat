<template>
  <div class="distributionCars_page">
    <div class="header">
      <div>当前可用{{ list.length }}车辆</div>
      <van-icon name="/static/images/icon_filter.png" size="48rpx" />
    </div>
    <div class="content">
      <div class="item_wrap" v-for="(item, index) in list" @click="onClick(item)">
        <div class="item">
          <div class="item_content">
            <div class="tag_drop">
              <text> {{ item.carNumber }}</text>
            </div>
            <div class="drop"></div>
            <div class="font-28 font-bold">{{item.fullWeight / 1000}}吨平板车</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
  import wepy from '@wepy/core';
  import { mapState, mapMutations } from '@wepy/x';
  import store from '@/store';
  wepy.page({
    store,
    data: {
      list: [],
      areaId: undefined
    },
    onLoad() {
      this.selByCarStateUserAndDept();
    },
    computed:{
       ...mapState(['detailApplyDo']),
    },
    methods: {
      ...mapMutations(['setDetailApplyDo']),
      onClick(item) {
        console.log(item.carId,item.carNumber)
        this.$set(this.detailApplyDo, 'carId',item.carId)
        this.$set(this.detailApplyDo, 'carNumber',item.carNumber)
        wx.navigateBack()

      },
      selByCarStateUserAndDept() {
        wepy.$api('/app/platformApply/getCarListByTranDept',{
          deptId:this.detailApplyDo.tranDeptId
        }).then((res)=>{
          if(res.length){
            this.list = res
          }else{
            wepy.$showToast('暂无可用车辆')
          }
        })
      }
    }
  });
</script>

