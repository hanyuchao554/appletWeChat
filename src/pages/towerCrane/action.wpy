<template>
  <div class="pop_up_wrap">
    <div v-if="!show">
      <div class="prop_up_title">
        <div @click="">选择操作</div>
        <div class="font-32 prop_up_title_r" @click="close">x</div>
      </div>
      <div class="prop_up_item_group">
        <div class="prop_up_item" @click="onSelect(item)" v-for="item in actionList">
          <van-icon :name="item.icon" size="48rpx"></van-icon>
          <div class="text">{{ item.text }}</div>
        </div>
      </div>
    </div>
    <van-overlay show="{{ show }}">
      <view class="wrapper">
        <div v-if=" tranState!==5" class="title">{{title}}</div>
        <div v-if=" tranState==5" class="title" style="color:#e0291e;">{{title}}</div>
        <div class="btn-box">
          <van-button custom-class="btn" @click="show=false" type="default">取消</van-button>
          <van-button custom-class="btn" color="#005BAC" type="default" @click="action">确认</van-button>
        </div>
      </view>
    </van-overlay>
  </div>
</template>

<script>
  import wepy from '@wepy/core';
  import store from '@/store';
  import {
    mapState,
    mapMutations
  } from '@wepy/x';
  wepy.component({
    store,
    props: {
      applyId: {
        type: Number,
        required: true
      },
      tranState: {
        type: Number,
        required: true
      },
      taskId: {
        type: Number,
        required: true
      },
      cartData: {
        type: Object
      }
    },
    data: {
      actionId: 0,
      title: '',
      show: false,
      disable: false,
      actionList: []
    },
    computed: {
      ...mapState(['detailApplyDo'])
    },
    attached() {
      let {
        isLinkage
      } = this.detailApplyDo;
      this.actionList = [{
          id: 2,
          icon: '/static/images/icon_ends.png',
          text: '修改车辆'
        },
        {
          id: 1,
          icon: '/static/images/icon_d.png',
          text: '修改任务信息'
        }
      ];
      // if (isLinkage === 2) {
      this.actionList.push({
        id: 3,
        icon: '/static/images/icon_z.png',
        text: '新增联吊任务'
      });
      // }
    },
    methods: {
      editDelForkTask() {
        return wepy
          .$api('app/craneEdit/editDelForkTask', {
            taskId: this.taskId
          })
          .then(() => this.onSuccess())
          .catch(() => this.onCatch());
      },
      onSuccess() {
        this.show = false;
        this.disable = false;
        this.$emit('onSuccess');
      },
      onCatch() {
        this.show = false;
        this.disable = false;
      },
      onSelect(item) {
        this.actionId = item.id;
        switch (item.id) {
          case 1:
            wx.navigateTo({
              url: `/pages/towerCrane/combinedCrane?isLinkage=${2}`
            });
            break;
          case 2:
            wx.navigateTo({
              url: `/pages/towerCrane/selByCarStateUserAndDept?isLinkage=${3}`
            });
            break;
          case 3:
            wx.navigateTo({
              url: `/pages/towerCrane/selByCarStateUserAndDept?isLinkage=${1}`
            });
            break;
          default:
            break;
        }
      },
      close() {
        this.$emit('close');
      },
      action() {
        if (this.disable) return;
        this.disable = true;
        wepy.$loading();
        switch (this.actionId) {
          case 2:
            this.editDelForkTask();
            break;
          default:
            break;
        }
      }
    }
  });
</script>

